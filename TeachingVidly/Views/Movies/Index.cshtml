@model TeachingVidly.Models.MoviesViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index @ViewBag.Hz </h2>

<table>
    <thead>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
    </thead>
    <tbody>
    
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
            </tr>
        }


    </tbody>
</table>

